{{!-- Session Card --}}

<div id="sessionCard" class="card" style="width: 20rem;">
    <div class="card-header">
        <small> {{subject}} </small>
    </div>
    {{!-- /.class-header --}}

    <div class="card-block">
        <h4 class="card-title"> {{session_name}} </h4>
        <h6 class="card-subtitle mb-2 text-muted">Date: {{session_date}} | Time: {{course_time}} | Attended: {{attendence}} </h6>
        <p class="card-text"> {{session_desc}} </p>
        <a href="#" class="card-link">Resources ({{resource_count}})</a>
        <a href="#" class="card-link">Comments ({{comment_count}})</a>
    </div>
    {{!-- /.card-block --}}

    <div class="card-footer">
        <small class="text-muted">Last updated {{updated}}</small>
    </div>
    {{!-- /.card-footer --}}
</div>


{{!-- Session Modal --}}

<div id="sessionModal" class="modal-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">.col-md-4</div>
            <div class="col-md-4 col-md-offset-4">.col-md-4 .col-md-offset-4</div>
        </div>
        <div class="row">
            <div class="col-md-3 col-md-offset-3">.col-md-3 .col-md-offset-3</div>
            <div class="col-md-2 col-md-offset-4">.col-md-2 .col-md-offset-4</div>
        </div>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">.col-md-6 .col-md-offset-3</div>
        </div>
        <div class="row">
            <div class="col-sm-9">
                Level 1: .col-sm-9
                <div class="row">
                    <div class="col-8 col-sm-6">
                        Level 2: .col-8 .col-sm-6
                    </div>
                    <div class="col-4 col-sm-6">
                        Level 2: .col-4 .col-sm-6
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>