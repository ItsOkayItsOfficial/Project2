<div class="container">
    <div class="row">

        {{!-- Main Pane --}}
        <div id="userInfo" class="order-lg-1 text-center active">

            <a id="slide" aria-expanded="true" aria-controls="userInfo"></a>

            <div class="col-lg-12">
                <img id="userAvatar" src=" {{user.user_avatar}} " class="rounded-circle" alt="">
                <h5 class="mb-3"> {{user.user_name}} </h5>
            </div>

            <div class="list-group panel">

                <a href="#menu1" class="list-group-item collapsed" data-toggle="collapse" data-parent="#userInfo" aria-expanded="false">
                    <i class="fa fa-dashboard"></i>
                    <span class="hidden-sm-down">Item 1</span>
                </a>
                <div id="menu1" class="collapse">
                    <a href="#" class="list-group-item" data-parent="#menu1">Subitem 1</a>
                    <a href="#" class="list-group-item" data-parent="#menu1">Subitem 2</a>
                    <a href="#" class="list-group-item" data-parent="#menu1">Subitem 3</a>
                </div>

                <a href="#menu2" class="list-group-item collapsed" data-toggle="collapse" data-parent="#userInfo" aria-expanded="false">
                    <i class="fa fa-dashboard"></i>
                    <span class="hidden-sm-down">Item 2</span>
                </a>
                <div id="menu2" class="collapse">
                    <a href="#" class="list-group-item" data-parent="#menu2">Subitem 1</a>
                    <a href="#" class="list-group-item" data-parent="#menu2">Subitem 2</a>
                    <a href="#" class="list-group-item" data-parent="#menu2">Subitem 3</a>
                </div>

                <a href="#menu3" class="list-group-item collapsed" data-toggle="collapse" data-parent="#userInfo" aria-expanded="false">
                    <i class="fa fa-dashboard"></i>
                    <span class="hidden-sm-down">Item 3</span>
                </a>
                <div id="menu3" class="collapse">
                    <a href="#" class="list-group-item" data-parent="#menu3">Subitem 1</a>
                    <a href="#" class="list-group-item" data-parent="#menu3">Subitem 2</a>
                    <a href="#" class="list-group-item" data-parent="#menu3">Subitem 3</a>
                </div>

            </div>
        </div>
        {{!-- /#userInfo --}}

        <div class="col-lg-8 order-lg-2">
            {{!-- Pane tabs --}}
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Profile</a>
                </li>
                <li class="nav-item">
                    <a href="/user/" data-target="#edit" data-toggle="tab" class="nav-link">New Course</a>
                </li>
            </ul>

            <div class="tab-content py-4">
                {{!-- Profile Pane --}}
                <div id="profile" class="tab-pane active">
                    <a href="#userInfo" data-toggle="collapse">
                        <i class="">X</i>
                    </a>

                    <div class="row">
                        {{!-- About --}}
                        <div class="col-md-6">
                            <h3>About</h3>
                            <p> {{user.user_email}} </p>
                            <p> {{user.user_desc}} </p>
                        </div>

                        {{!-- Courese Enrolled in List --}}
                        <div id="enrollment" class="col-md-6">
                            <h3>All Courses</h3>
                            {{!-- From courses table --}} {{#each courses}}
                            <a href="{{course_url}}">
                                <p> {{course_name}} </p>
                            </a>
                            <p> {{course_day}} | {{course_time}} </p>
                            <p> {{course_desc}}</p>
                            {{/each}}
                        </div>
                        {{!-- /#enrollment --}}
                    </div>
                    {{!-- /row --}} {{!-- Resources Starred and Added List --}}
                    <div id="resources" class="col-md-12">
                        <h5 class="mt-2">
                            <span class="fa fa-clock-o ion-clock float-right"></span>Starred Resources</h5>
                        <table class="table table-sm table-hover table-striped">
                            <tbody>
                                {{#each resource}}
                                <tr>
                                    <td>
                                        {{!-- From resources table --}}
                                        <a href="{{resource_url}}">
                                            {{resource_title}}
                                        </a>
                                        <p>
                                            <a href=' {{session_url}} '> {{session_name}} </a> |
                                            <a href=' {{subject_url}} '> {{subject}} </a>
                                        </p>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                {{!-- /#profile --}} {{!-- Messages Pane --}}
                <div id="messages" class="tab-pane">
                    <div class="alert alert-info alert-dismissable">
                        <a class="panel-close close" data-dismiss="alert">Ã—</a> This is an
                        <strong>.alert</strong>. Use this to show important messages to the user.
                    </div>

                    <table class="table table-hover table-striped">
                        <tbody>
                            <tr>
                                <td>
                                    {{!-- MESSAGE --}}
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
                {{!-- /#messages --}} {{!-- Edit Pane --}}
                <div class="tab-pane" id="edit">
                    <form role="form">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Course Name</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="text" id='inputCourseName' placeholder="name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Course Description</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="text" id='inputCourseDescription' placeholder="description">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Start Date</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="date" id='inputCourseTime' placeholder="start date">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">End Date</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="date" id='inputCourseTime' placeholder="end date">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Course Time</label>
                            <div class="col-lg-9">
                                <input class="form-control" type="time" id='inputCourseTime' placeholder="time">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label"></label>
                            <div class="col-lg-9">
                                <input type="reset" class="btn btn-secondary" value="Cancel">
                                <input type="button" class="btn btn-primary" id='submitNewCourse' value="Add Course">
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>
    {{!-- /.row --}}
</div>
{{!-- /.container --}}

<script>
    $('#slide').on('click', function () {
        $('#userInfo').toggleClass('active');
    });
</script>