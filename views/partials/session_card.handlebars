{{!-- Session Card --}}
<h1 id="CourseId">{{CourseId}}</h1>
{{#each sessions}}
    <div id={{id}} class="card sessionCard" style="width: 20rem;" data-toggle="modal" data-target="#session{{id}}">
        <div class="card-header">
            <img class="icon" src=' {{subject_avatar}} '> {{subject}}
            <small class="text-muted" style="float:right">Attendance {{attendance}} </small>
        </div>

        <div class="card-block">
            <h4 class="card-title"> {{session_name}} </h4>
            <p class="card-subtitle mb-2 text-muted">Date: {{session_date}} | Time: {{course_time}} </p>
            <p class="card-text"> {{session_desc}} </p>
        </div>

        <div class="card-footer">
            <small class="text-muted">Comments ({{comment_count}}) </small>
            <small class="text-muted">Resources ({{resource_count}}) </small>
            <small class="text-muted">Updated {{updated}} </small>
        </div>
    </div>



    <div id="session{{id}}" class="modal fade" tabindex="-1" role="dialog" aria-labelledby=" {{id}} " aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"> {{session_name}} </h4>
                    <p class="modal-subtitle text-muted">Date: {{session_date}} | Time: {{course_time}} </p>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <form>
                              <div class="form-group">
                                <label for="resourceText">Resource</label>
                                <input type="text" class="form-control resourceUrl"  placeholder="Resource URL">
                                <input type="text" class="form-control resourceDesc"  placeholder="Resource Description">
                              </div>
                              <button type="submit" id = "{{id}}"class="resourceSubmit" class="btn btn-primary">Submit</button>
                            </form>
                            <div class="col-md-4">.col-md-4</div>
                            <div class="col-md-4 col-md-offset-4">.col-md-4 .col-md-offset-4</div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-md-offset-3">.col-md-3 .col-md-offset-3</div>
                            <div class="col-md-2 col-md-offset-4">.col-md-2 .col-md-offset-4</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3">.col-md-6 .col-md-offset-3</div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9">
                                Level 1: .col-sm-9
                                <div class="row">
                                    <div class="col-8 col-sm-6">
                                        Level 2: .col-8 .col-sm-6
                                    </div>
                                    <div class="col-4 col-sm-6">
                                        Level 2: .col-4 .col-sm-6
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}